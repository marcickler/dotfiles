# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# Cluster module init scripts may export FPATH (and thus set $fpath) to a minimal
# directory like /usr/share/Modules/init/zsh-functions, which hides standard Zsh
# autoloaded functions (compinit, add-zsh-hook, colors, is-at-least, ...).
# Oh My Zsh depends on those functions, so ensure the standard function
# directories are present for interactive shells.
if [[ -o interactive ]]; then
  typeset -U fpath
  for _zfuncdir in \
    /usr/local/share/zsh/site-functions \
    /usr/share/zsh/site-functions \
    "/usr/share/zsh/${ZSH_VERSION}/functions"
  do
    [[ -d "${_zfuncdir}" ]] && fpath=("${_zfuncdir}" $fpath)
  done
  unset _zfuncdir
fi

# If you come from bash you might have to change your $PATH.
# export PATH=$HOME/bin:/usr/local/bin:$PATH

# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"

# change zsh custom directory to track changes
ZSH_CUSTOM=~/.zsh_custom

# Plugins
# Standard plugins can be found in $ZSH/plugins/
# Custom plugins may be added to $ZSH_CUSTOM/plugins/
# Add wisely, as too many plugins slow down shell startup.
plugins=(
  git
  z
  history
  common-aliases
  sudo
  extract
  zsh-autosuggestions
  command-not-found
)

source $ZSH/oh-my-zsh.sh

# Powerlevel10k configuration
# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
source ~/.powerlevel10k/powerlevel10k.zsh-theme
source ~/.p10k.zsh

case ":${PATH}:" in
    *:"$HOME/.local/bin":*)
        ;;
    *)
        # Prepending path in case a system-installed binary needs to be overridden
        export PATH="$HOME/.local/bin:$PATH"
        ;;
esac

if command -v uv >/dev/null 2>&1; then
 eval "$(uv generate-shell-completion zsh)" &>/dev/null
fi

export VISUAL=vim
export EDITOR="$VISUAL"

alias act='source .venv/bin/activate'
alias cddata='cd $DFT_DATA'
alias cdmodel='cd $DFT_MODELS'

# rsync recursive, verbose, human-readable, compressed, progress bar
alias rsynk='rsync -avhz --info=progress2 --info=name0'
